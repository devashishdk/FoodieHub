<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:id="@+id/card_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:elevation="15dp"
    app:cardCornerRadius="30dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.devashishthakur.fooddelivery.MyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delivered"
            android:id="@+id/status"
            android:textColor="@color/colorGreen"
            android:textSize="14sp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_marginLeft="10dp"
                >

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/Order_image"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/profilenav" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="64dp"
                    android:layout_marginLeft="20dp"
                    android:orientation="vertical"
                    android:weightSum="2">

                    <com.devashishthakur.fooddelivery.MyTextView
                        android:id="@+id/person_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        style="@style/TextAppearance.AppCompat.Title"
                        android:text="NAME"
                        android:textSize="18sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight="1">
                        <ImageButton
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:background="@null"
                            android:scaleType="fitCenter"
                            android:layout_gravity="top"
                            android:src="@drawable/call"/>
                        <com.devashishthakur.fooddelivery.MyTextView
                            android:id="@+id/person_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginLeft="5dp"
                            android:gravity="top"
                            style="@style/TextAppearance.AppCompat.Subhead"
                            android:text="NUMBER"
                            android:textSize="14sp" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <com.devashishthakur.fooddelivery.MyTextView
                    android:id="@+id/person_hostel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="HOSTEL"
                    style="@style/TextAppearance.AppCompat.Subhead"
                    android:textSize="14sp" />

                <com.devashishthakur.fooddelivery.MyTextView
                    android:id="@+id/person_room"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="ROOM"
                    style="@style/TextAppearance.AppCompat.Subhead"
                    android:textSize="14sp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_margin="10dp"
            android:weightSum="3">

            <Button
                android:id="@+id/billButton"
                style="button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:backgroundTint="@color/colorGreen"
                android:text="BILL"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/callButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:backgroundTint="@color/colorGreen"
                android:text="CALL"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/cancelButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:backgroundTint="@color/colorPrimary"
                android:text="CANCEL"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/rateButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:backgroundTint="@color/colorRating"
                android:text="RATE"
                android:visibility="gone"
                android:textColor="@android:color/white" />

        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>